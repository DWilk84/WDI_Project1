<p id="notice"><%= notice %></p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Role:</b>
  <%= @user.role %>
</p>

<table>
  <tr>
    <th>Courses</th>
    <th>Status</th>
  </tr>
  <% @user.admissions.each do |admission| %>
  <tr>
    <td>
      <%= admission.course.code %>
    </td>
    <td>
      <%= admission.status %>
    </td>
  </tr>
  <% end %>
</table>



<%= link_to 'Edit', edit_user_path(@user) %> |
