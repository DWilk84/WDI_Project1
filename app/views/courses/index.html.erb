<h1 class="page_title">Schedule of Courses</h1>
<div class="page_content">
  <div id="accordion">
    <% if can? :update, Course %>

    <h3>Completed Courses:</h3>
    <div>
      <%= render 'courses_table', target: @completed_courses %>
    </div>

    <h3>Ongoing Courses:</h3>
    <div>
      <%= render 'courses_table', target: @ongoing_courses %>
    </div>
    
    <% end %>

    <h3>Upcoming Courses:</h3>
    <div>
      <%= render 'courses_table', target: @upcoming_courses %>
    </div>
  </div>

  <br />
  <% if can? :create, Course %>
  <%= link_to 'New Course', new_course_path %>  
  <% end %>

</div>