<p id="notice"><%= notice %></p>

<p>
  <b>Program:</b>
  <%= @course.program.name %>
</p>

<p>
  <b>Course code:</b>
  <%= @course.code %>
</p>

<p>
  <b>Start date:</b>
  <%= @course.start_date %>
</p>

<p>
  <b>End date:</b>
  <%= @course.end_date %>
</p>

<p>
  <b>City:</b>
  <%= @course.classroom.city %>
</p>

<!-- course application button -->

<%= render 'shared/admissions_form' %>
  

<!-- the following to be seen by admins only  -->

<p>
  <b>Max number of course participants:</b>
  <%= @course.classroom.capacity %>
</p>

<p>
  <b>Applicants:</b>
  <% @course.admissions.each do |admission| %>
    <li><%= "#{admission.user.email}, status: #{admission.status} " %></li>
  <% end %>
</p>




<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
